.form-cell_title {
  margin-bottom: 10px;
  font-size: 18px;
}

.form-cell_placeholder {
  font-size: 14px;
  color: #d3d3d3;
}

.form-cell_input {
  width: 100%;
  font-size: 16px;
  color: black;
}

.footer {
  width: 100%;
  height: 8%;
  bottom: 0;
  display: flex;
  position: fixed;
  border-top: lightgray solid 1px;
  background-color: white;
}

.container {
  padding-bottom: 100px !important;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  font-size: 16px;
  text-align: center;
}

.reset {
  color: #353535;
  background: white;
}

.save {
  color: white;
  background: #353535;
}

/* 滑块和值显示样式 */
.slider-with-input {
  position: relative;
  width: 100%;
}

/* 隐藏原生滑块值显示 */
.custom-slider {
  --show-value-width: 0;
  --show-value-font-size: 0;
  --show-value-height: 0;
  padding-right: 70px;
}

/* 自定义滑块值样式 */
.slider-value {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 11px;
  color: #353535;
  padding: 2px 5px;
  background-color: #f0f0f0;
  border-radius: 8px;
  cursor: pointer;
  user-select: none;
  min-width: 25px;
  max-width: 45px;
  text-align: center;
  white-space: nowrap;
}

.slider-value:active {
  background-color: #e0e0e0;
}