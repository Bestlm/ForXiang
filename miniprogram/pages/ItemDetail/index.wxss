.background {
  width: 70vw;
  margin-top: 5vh;
}

.title {
  margin-top: 20px;
  font-size: 19px;
  font-weight: bold;
}
.subtitle {
  margin-top: 9px;
  font-size: 14px;
}

.swiper-image{
  display: block;
  height: 100%; 
  width: 100%;
  background-color: darkgray;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

/* 页面标题样式 */
.page-title{
    position: fixed;
    font-size: 14px;
    width: 100%;
    height: 40px;
    top: 0px;
    color: #353535;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    background-color: rgba(255, 255, 255, 0.95);
    /* 鸿蒙平台可能不支持backdrop-filter，使用半透明背景替代 */
    background-color: rgba(255, 255, 255, 0.98);
    z-index: 10;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;
    box-sizing: border-box;
    border-bottom: 1px solid #f0f0f0;
}

.page-title-left {
    font-weight: bold;
    font-size: 15px;
}

.page-title-right {
    font-weight: bold;
    font-size: 15px;
}

/* 从首页导入用户颜色样式 */
.user-a-title {
    color: #ff6b9d;
    font-weight: bold;
    font-size: 15px;
}

.user-b-title {
    color: #5c87fe;
    font-weight: bold;
    font-size: 15px;
}

/* 调整容器间距，增加标题和背景的间距 */
.container {
  padding-top: 20px;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

/* 确保搜索栏和表单组宽度一致，且铺满容器 */
.form-group {
  width: calc(100% - 40px) !important;
  margin: 10px 20px !important;
  border-radius: 10px !important;
  background: rgba(255, 255, 255, 0.8) !important;
  align-self: stretch;
}

/* 调整搜索栏容器 */
.form-group:first-child {
  margin-top: 20px !important;
}

.form-cell {
    padding: 0;
}

.form-group_label {
  align-self: flex-start;
  width: auto;
  margin-top: 20px;
  margin-bottom: 10px;
  margin-left: 20px;
  font-size: 18px;
  font-weight: bold;
  color: #353535;
}
.slide {
  display: flex;
  align-items: center;
  padding: 10px;
  position: relative;
}

.item-info {
  width: auto;
  margin-left: 10px;
  display: flex;
  flex-direction: column
}
.item-info_title {
  font-size: 18px;
}
.item-info_desc {
  font-size: 14px;
  color: #BDBDBD;
}
.item-info_date {
  font-size: 14px;
  color: #BDBDBD;
}
.item-info_author {
  width: 70px;
  height: 100%;
  position: absolute;
  right: 10%;
  bottom: 0;
}
.item-info_award {
  font-size: 14px;
}
.star {
  width: 40px;
  height: 40px;
  position: absolute;
  right: 0;
  top: 0;
}

.useBtn .weui-slideview__btn {background-color: greenyellow;}
.starBtn .weui-slideview__btn {background-color: gold;}
.removeBtn .weui-slideview__btn {background-color: lightsalmon;}

.btn-normal{
  margin: 2%;
  color: white;
  background-color: #3d3d3d;
}
.btn-hover{
  color: black;
  background-color: gray;
}

.search-bar {
  position: relative;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(230, 230, 234, 0.8);
  border-radius: 10px;
  padding: 5px 12px;
  height: 36px;
  align-items: center;
}
.search-input {
  position: relative;
  left: 20px;
  height: 26px;
  width: 80%;
  line-height: 26px;
  font-size: 13px;
  background: transparent;
  border: none;
  outline: none;
}
.search-icon {
  position: absolute;
  margin: 2px;
}

/* 添加新任务按钮样式 */
.add-button-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
  padding: 0 20px;
}

.add-button {
  width: 100%;
  max-width: 600px;
  background-color: #ff99aa;
  color: white;
  font-size: 18px;
  font-weight: bold;
  padding: 12px 0;
  border: none;
  border-radius: 25px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

.add-button:active {
  background-color: #ff7799;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

/* 确保表单组和搜索栏宽度一致 */
.form-group {
  width: calc(100% - 40px) !important;
  margin: 10px 20px !important;
  border-radius: 10px !important;
  background: rgba(255, 255, 255, 0.8) !important;
}

/* 调整物品卡片样式，使其与任务卡片一致 */
.form-cell {
  padding: 20px 15px !important;
}

.form-cell:not(:last-child) {
  border-bottom: rgba(0, 0, 0, 0.05) solid 1px !important;
}